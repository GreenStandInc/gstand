{
  "lexicon": 1,
  "id": "app.gstand.unstable.store.shop",
  "defs": {
    "main": {
      "type": "record",
      "description": "A curated shop page",
      "key": "tid",
      "record": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "banner": {
            "type": "blob",
            "accept": [
              "image/png",
              "image/jpeg"
            ]
          },
          "items": {
            "type": "array",
            "items": {
              "type": "ref",
              "ref": "app.gstand.unstable.store.item"
            }
          }
        }
      }
    }
  }
}